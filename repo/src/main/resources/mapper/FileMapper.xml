<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hbjs.hrsrepo.mapper.FileMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.hbjs.hrscommon.domain.sys.FileDO">
        <id column="id" property="id" />
        <result column="file_name" property="fileName" />
        <result column="suffix_name" property="suffixName" />
        <result column="path" property="path" />
        <result column="created_by" property="createdBy" />
        <result column="created_date" property="createdDate" />
        <result column="last_modified_by" property="lastModifiedBy" />
        <result column="last_modified_date" property="lastModifiedDate" />
    </resultMap>

    <select id="getFilePage" resultType="com.hbjs.hrscommon.dto.FileDTO">
        select id, file_name, suffix_name, path,
               created_by, created_date, last_modified_by, last_modified_date
        from sys_file
        <if test="keyword != null and keyword != ''">
            where file_name like concat ('%', #{keyword}, '%') or suffix_name like concat ('%', #{keyword}, '%')
        </if>
    </select>

</mapper>
